# =============================================================================
# Data Alchemist - Production Environment Variables
# =============================================================================

# Application Configuration
NEXT_PUBLIC_APP_NAME="Data Alchemist: Production AI Resource Configurator"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_DEBUG_MODE=false

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=".csv,.xlsx,.xls"

# Validation Configuration
NEXT_PUBLIC_ENABLE_REAL_TIME_VALIDATION=true
NEXT_PUBLIC_MAX_VALIDATION_ERRORS=100

# Export Configuration
NEXT_PUBLIC_EXPORT_FORMAT="csv,json"
NEXT_PUBLIC_ENABLE_BULK_EXPORT=true

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED FOR PRODUCTION)
# =============================================================================

# Supabase Project Configuration
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# AI Services (Optional - for enhanced features)
# =============================================================================

# OpenAI Configuration (for advanced AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (alternative AI provider)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Authentication (Optional - for user management)
# =============================================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# Deployment Configuration
# =============================================================================

# Next.js Configuration
NODE_ENV=development

# =============================================================================
# Third-Party Services (Optional)
# =============================================================================

# Analytics (Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking (Sentry, LogRocket, etc.)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Email Services (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret (for authentication if implemented)
JWT_SECRET=your_jwt_secret_here

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_encryption_key_here

# CORS Origins (for API security)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com